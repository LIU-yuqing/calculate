<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"

    >
    <!-- 结果显示框 -->
    <EditText
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:cursorVisible="false"
        android:editable="false"
        android:gravity="right"
        android:text="0" />

    <!-- 接下去采TableRow的格式进行布局设计 -->


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView android:id="@+id/_drg"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:text="   结果："
            />
        <!-- 清除输出窗口的所有内容 -->
        <Button android:id="@+id/c"
            android:text="C"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            />

        <!-- 单位转换 -->
        <Button
            android:id="@+id/switch_button"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="转换" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 在角度和弧度之间切换 -->
        <Button
            android:id="@+id/drg"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="函数" />
        <!-- 正弦计算 -->
        <Button
            android:id="@+id/sin"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="sin" />
        <!-- 余弦计算 -->
        <Button
            android:id="@+id/cos"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="cos" />

        <Button
            android:id="@+id/log"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="log" />
        <!-- 对数 -->
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 数字7 -->
        <Button
            android:id="@+id/seven"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7" />
        <!-- 数字8 -->
        <Button
            android:id="@+id/eight"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8" />
        <!-- 数字9 -->
        <Button
            android:id="@+id/nine"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9" />
        <!-- 除号 -->
        <Button
            android:id="@+id/divide"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="÷" />
        <!-- 左括号 -->
        <Button
            android:id="@+id/left"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="(" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字4 -->
        <Button android:id="@+id/four"
            android:text="4"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 数字5 -->
        <Button android:id="@+id/five"
            android:text="5"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 数字6 -->
        <Button android:id="@+id/six"
            android:text="6"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 乘号 -->
        <Button android:id="@+id/mul"
            android:text="×"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 右括号 -->
        <Button android:id="@+id/right"
            android:text=")"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字1 -->
        <Button android:id="@+id/one"
            android:text="1"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 数字2 -->
        <Button android:id="@+id/two"
            android:text="2"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 数字3 -->
        <!-- 减号 -->
        <Button
            android:id="@+id/three"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3" />

        <Button android:id="@+id/sub"
            android:text="-"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 乘方 -->
        <Button android:id="@+id/square"
            android:text="^"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >


        <!-- 退格键 -->
        <Button android:id="@+id/del"
            android:text="del"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <!-- 数字0 -->
        <Button android:id="@+id/zero"
                android:text="0"
            android:layout_height="fill_parent"
            android:layout_weight="1"
                />
            <!-- 小数点 -->
            <Button android:id="@+id/dot"
                android:text="."
                android:layout_height="fill_parent"
                android:layout_weight="1"
                />
          <!-- 加号 -->
        <Button android:id="@+id/add"
            android:text="+"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
            <!-- 等号 -->
            <Button android:id="@+id/equal"
                android:text="="
                android:layout_height="fill_parent"
                android:layout_weight="1"
                />

    </TableRow>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="57sp"
        ></TableLayout>




</LinearLayout>